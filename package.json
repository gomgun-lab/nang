{
  "name": "nang",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "check-types": "turbo run check-types",
    "db:up": "docker-compose -f docker-compose.dev.yml up -d",
    "db:down": "docker-compose -f docker-compose.dev.yml down",
    "db:restart": "docker-compose -f docker-compose.dev.yml restart",
    "db:logs": "docker-compose -f docker-compose.dev.yml logs -f postgres",
    "db:clean": "docker-compose -f docker-compose.dev.yml down -v",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.6.0",
    "turbo": "^2.5.0"
  },
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=22"
  }
}
